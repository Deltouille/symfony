{% block body %}
<div>
    <div class="pull-right">
    </div>
    <h1>Listes des Missions</h1>

    <hr />
    {# Tableau des différentes planque #}
    <table id="planque" class="table table-striped table-bordered" style="width:100%">
    {# En-tête des champs pour les différentes planque #}
        <thead>
            <tr>
                <th style="border-top:0px solid black; padding-left: 9px;">Code</th>
                <th style="border-top:0px solid black; padding-left: 9px;">Adresse</th>
                <th style="border-top:0px solid black; padding-left: 9px;">Ville</th>
                <th style="border-top:0px solid black; padding-left: 9px;">Code Postal</th>
                <th style="border-top:0px solid black; padding-left: 9px;">Pays</th>
                <th style="border-top:0px solid black; padding-left: 9px;">Type</th>
            </tr>
        </thead>
        {# On parcours l'array envoyer par le controller pour remplir le tableau #}
        <tbody>
            {% for planque in listePlanque %}
            <tr>
                <td>{{ planque.code }}</td>
                <td>{{ planque.adresse }}</td>
                <td>{{ planque.ville }}</td>
                <td>{{ planque.CP }}</td>
                <td>{{ planque.pays }}</td>
                <td>{{ planque.type }}</td>


                {#<td>
                    <a href="#">
                        <i class ="glyphicon glyphicon-chevron-left"></i>
                        Details de la classification
                    </a>
                </td>#}
            </tr>
            {% endfor %}
        </tbody>
    </table>

